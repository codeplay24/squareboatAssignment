<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/recruiterLogin.css">

    <title>Home</title>
  </head>
  <body>
    <script>
        const id = '<%= recruiterId%>'
        //localStorage.setItem('id', id)
    </script>

    <div class="rahul_inline">
        <img src="./img/logo.png" class="img-thumbnail" alt="...">
        <h1 class="display-4">Squareboat Assignment</h1>
        <span id="logoutLink"><a href="/logout">logout</a></span>
    </div>
    
    <div class="container">
        <div class="row">
          <div class="col">
            <h1 class="display-6">Post a job here</h1>
            <div id="postCol">
                <div class="mb-3">
                  <label  class="form-label">title</label>
                  <input type="text" class="form-control" id="jobTitle">
                </div>
                <div class="mb-3">
                  <label  class="form-label">description</label>
                  <textarea id="jobDesc" name="description"cols="30" rows="5" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" onclick="savejob()">Post</button>
            </div>
          </div>
          <div class="col">
              <%jobsandcandidates.forEach((ele)=>{%>
                <p id="jobs">
                  <%=ele.candidate.name%> applied for <%=ele.job.title%> role
                  Email: <%=ele.candidate.email%>
                </p>
              <%})%>
          </div>
        </div>
      </div>
      <script src="./js/recruiterHome.js"></script>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
